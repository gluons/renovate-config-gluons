{
  "name": "renovate-config-gluons",
  "version": "1.3.0",
  "description": "Gluons' personal Renovate shareable config.",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/renovate-config-gluons.git"
  },
  "keywords": [
    "❤️",
    "renovate",
    "renovateconfig",
    "renovate-config",
    "gluons"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/renovate-config-gluons/issues"
  },
  "homepage": "https://github.com/gluons/renovate-config-gluons",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "description": [
        "Gluons' personal Renovate shareable config."
      ],
      "rangeStrategy": "replace",
      "packageRules": [
        {
          "updateTypes": [
            "minor",
            "patch"
          ],
          "automerge": true,
          "gitLabAutomerge": true
        }
      ],
      "labels": [
        "renovate"
      ],
      "assignees": [
        "gluons"
      ],
      "reviewers": [
        "gluons"
      ],
      "timezone": "Asia/Bangkok",
      "schedule": [
        "every weekend"
      ],
      "commitMessagePrefix": "⬆️"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "eslint": "^7.11.0",
    "eslint-config-gluons": "^6.0.7",
    "jest": "^26.5.3",
    "renovate": "^23.49.7"
  }
}
